				<position>mainbody_bottom</position>
				<position>top</position>				
				<position>bottom</position>	
				-->			
		</positions>
		<languages folder="language">
				<language tag="en-GB">en-GB.tpl_diportal.ini</language>
		</languages>
		<config>
				<fields name="params">
						<!-- Basic settings -->
						<fieldset name="BASIC_SETTINGS" addfieldpath="/templates/diportal/admin/elements">
								<field name="template_color" type="list" default="1" label="TPL_LANG_TEMPLATE_COLOR" description="TPL_LANG_TEMPLATE_COLOR_DESC">
										<option value="1">TPL_LANG_COLOR_1</option>
										<option value="2">TPL_LANG_COLOR_2</option>
										<option value="3">TPL_LANG_COLOR_3</option>
								</field>								
						</fieldset>					
						
				</fields>
		</config>
</extension>
